// import '@fontsource-variable/caveat/wght.css';
// import { getContentColor } from '~/config/theme';

// Ajout des polices personnalisées
---

<style is:inline>
  /* Déclaration optimisée des polices */
  @font-face {
    font-family: 'Bebas Neue';
    font-style: normal;
    font-weight: 400;
    font-display: swap;
    src: url('/fonts/bebas-neue-latin-400-normal.woff2') format('woff2'),
         url('/fonts/bebas-neue-latin-400-normal.woff') format('woff');
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  @font-face {
    font-family: 'Raleway Variable';
    font-style: normal;
    font-weight: 100 900;
    font-display: swap;
    src: url('/fonts/raleway-latin-wght-normal.woff2') format('woff2');
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  @font-face {
    font-family: 'Caveat Variable';
    font-style: normal;
    font-weight: 400 700;
    font-display: swap;
    src: url('/fonts/caveat-latin-wght-normal.woff2') format('woff2');
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  :root {
    /* Couleurs OOTB de base */
    --ootb-orange: #e7461c;
    --ootb-violet: #921e6d;
    --ootb-green: #40ad50;
    --ootb-blue: #0890bd;
    --ootb-turquoise: #69b29e;
    --ootb-yellow: #f9b004;
  }
  
  .font-handwritten {
    font-family: 'Caveat Variable', cursive;
  }
  /* Typographie essentielle */
  .font-heading {
    font-family: 'Bebas Neue', system-ui, sans-serif !important;
    text-transform: uppercase;
    letter-spacing: 0.02em !important;
  }

  .font-body {
    font-family: 'Raleway Variable', system-ui, sans-serif;
  }

  /* Hiérarchie de base */
  h1, .h1 {
    @apply font-heading text-4xl md:text-5xl lg:text-6xl;
    letter-spacing: 0.06em;
  }

  h2, .h2 {
    @apply font-body font-semibold text-2xl md:text-3xl;
    letter-spacing: -0.02em;
  }

  h3, .h3 {
    font-family: 'Caveat Variable', cursive;
    font-variation-settings: "wght" 600;
    letter-spacing: 0.01em;
    line-height: 1.3;
    @apply text-2xl md:text-3xl;
  }
  /* Classes utilitaires minimales */
  .section-divider {
    @apply font-heading uppercase tracking-wider text-sm;
  }

  .tagline {
    @apply font-body font-medium tracking-tight;
  }

  /* Support de prefers-reduced-motion */
  @media (prefers-reduced-motion: reduce) {
    * {
      @apply transition-none animate-none;
    }
  }

  /* Suppression du code problématique qui utilise getContentColor */
  /* {
    [`bg-[var(${getContentColor(finalType)})]`]: true,
  } */
</style>
