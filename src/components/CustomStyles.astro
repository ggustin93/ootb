---
import '@fontsource/bebas-neue/400.css';  // Import spécifique du poids 400
import '@fontsource-variable/raleway';
import '@fontsource-variable/caveat/wght.css';  // Import de Caveat Variable avec tous les poids
import { getContentColor } from '~/config/theme';

// Ajout des polices personnalisées
---

<style is:inline>
  /* Déclaration explicite de Bebas Neue */
  @font-face {
    font-family: 'Bebas Neue';
    font-style: normal;
    font-weight: 400;
    font-display: swap;
    src: url('/node_modules/@fontsource/bebas-neue/files/bebas-neue-latin-400-normal.woff2') format('woff2');
  }

  :root {
    /* Couleurs OOTB de base */
    --ootb-orange: #e7461c;
    --ootb-violet: #921e6d;
    --ootb-green: #40ad50;
    --ootb-blue: #0890bd;
    --ootb-turquoise: #69b29e;
    --ootb-yellow: #f9b004;
  }
  
  .font-handwritten {
    font-family: 'Caveat Variable', cursive;
  }
  /* Typographie essentielle */
  .font-heading {
    font-family: 'Bebas Neue', system-ui, sans-serif !important;
    text-transform: uppercase;
    letter-spacing: 0.02em !important;
  }

  .font-body {
    font-family: 'Raleway Variable', system-ui, sans-serif;
  }

  /* Hiérarchie de base */
  h1, .h1 {
    @apply font-heading text-4xl md:text-5xl lg:text-6xl;
    letter-spacing: 0.06em;
  }

  h2, .h2 {
    @apply font-body font-semibold text-2xl md:text-3xl;
    letter-spacing: -0.02em;
  }

  h3, .h3 {
    font-family: 'Caveat Variable', cursive;
    font-variation-settings: "wght" 600;
    letter-spacing: 0.01em;
    line-height: 1.3;
    @apply text-2xl md:text-3xl;
  }
  /* Classes utilitaires minimales */
  .section-divider {
    @apply font-heading uppercase tracking-wider text-sm;
  }

  .tagline {
    @apply font-body font-medium tracking-tight;
  }

  /* Support de prefers-reduced-motion */
  @media (prefers-reduced-motion: reduce) {
    * {
      @apply transition-none animate-none;
    }
  }

  /* Pour les classes conditionnelles */
  {
    [`bg-[var(${getContentColor(finalType)})]`]: true,
  }
</style>
