---
import Image from '~/components/common/Image.astro';
import type { ImageMetadata } from 'astro';

interface Props {
  image: ImageMetadata | string;
  title: string;
}

const { image, title } = Astro.props;
---

<Image
  src={image}
  class="max-w-full lg:max-w-[900px] mx-auto mb-10 sm:rounded-xl shadow-lg bg-gray-400 dark:bg-slate-700"
  widths={[400, 900]}
  sizes="(max-width: 900px) 400px, 900px"
  alt={`Image illustrant l'article : ${title}`}
  width={900}
  height={506}
  loading="eager"
  decoding="async"
/> 