---
import { Icon } from 'astro-icon/components';

const teachingTypes = [
  { id: 'primaire', label: 'Primaire', icon: 'tabler:abc' },
  { id: 'secondaire', label: 'Secondaire', icon: 'tabler:book' },
  { id: 'specialise', label: 'Spécialisé', icon: 'tabler:puzzle' }
];

const sections = [
  { id: 'maternelle', label: 'Maternelle', icon: 'tabler:baby-carriage' },
  { id: 'primaire', label: 'Primaire', icon: 'tabler:pencil' },
  { id: 'secondaire', label: 'Secondaire', icon: 'tabler:school' }
];
---

<form class="space-y-8 max-w-4xl mx-auto mb-12">
  <!-- Informations personnelles -->
  <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-100 hover:border-sky-100 transition-colors">
    <div class="flex items-center gap-4 mb-8">
      <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-sky-100 to-blue-50 flex items-center justify-center">
        <Icon name="tabler:user" class="w-6 h-6 text-sky-600" />
      </div>
      <div>
        <h3 class="text-xl font-bold text-gray-900">À propos de vous</h3>
        <p class="text-gray-500 text-sm">Informations de contact</p>
      </div>
    </div>

    <div class="grid md:grid-cols-2 gap-8">
      <div class="space-y-2">
        <label for="prenom" class="text-sm font-medium text-gray-700 flex items-center gap-2">
          <Icon name="tabler:id" class="w-4 h-4 text-gray-400" />
          Prénom *
        </label>
        <input 
          type="text" 
          id="prenom" 
          name="prenom" 
          required
          class="form-input"
        />
      </div>

      <div class="space-y-2">
        <label for="nom" class="text-sm font-medium text-gray-700 flex items-center gap-2">
          <Icon name="tabler:id" class="w-4 h-4 text-gray-400" />
          Nom *
        </label>
        <input 
          type="text" 
          id="nom" 
          name="nom" 
          required
          class="form-input"
        />
      </div>

      <div class="space-y-2">
        <label for="email" class="text-sm font-medium text-gray-700 flex items-center gap-2">
          <Icon name="tabler:mail" class="w-4 h-4 text-gray-400" />
          Email *
        </label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          required
          class="form-input"
        />
      </div>

      <div class="space-y-2">
        <label for="telephone" class="text-sm font-medium text-gray-700 flex items-center gap-2">
          <Icon name="tabler:phone" class="w-4 h-4 text-gray-400" />
          Téléphone
        </label>
        <input 
          type="tel" 
          id="telephone" 
          name="telephone"
          class="form-input"
        />
      </div>
    </div>
  </div>

  <!-- Informations du projet -->
  <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-100 hover:border-sky-100 transition-colors">
    <div class="flex items-center gap-4 mb-8">
      <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-purple-100 to-sky-50 flex items-center justify-center">
        <Icon name="tabler:bulb" class="w-6 h-6 text-purple-600" />
      </div>
      <div>
        <h3 class="text-xl font-bold text-gray-900">Votre projet</h3>
        <p class="text-gray-500 text-sm">Détails de votre innovation pédagogique</p>
      </div>
    </div>

    <div class="space-y-8">
      <div class="space-y-2">
        <label for="titre" class="text-sm font-medium text-gray-700 flex items-center gap-2">
          <Icon name="tabler:writing" class="w-4 h-4 text-gray-400" />
          Titre du projet *
        </label>
        <input 
          type="text" 
          id="titre" 
          name="titre" 
          required
          placeholder="Un titre accrocheur qui résume votre projet"
          class="form-input"
        />
      </div>

      <!-- Type d'enseignement -->
      <div class="space-y-4">
        <label class="text-sm font-medium text-gray-700">Type d'enseignement *</label>
        <div class="grid md:grid-cols-3 gap-4">
          {teachingTypes.map(type => (
            <label class="relative flex cursor-pointer">
              <input
                type="radio"
                name="type-enseignement"
                value={type.id}
                required
                class="peer sr-only"
              />
              <div class="w-full p-4 rounded-xl border-2 border-gray-200 bg-white hover:border-sky-200 peer-checked:border-sky-500 peer-checked:bg-sky-50 transition-all flex items-center gap-3">
                <Icon name={type.icon} class="w-5 h-5 text-sky-600" />
                <span class="text-gray-700 font-medium">{type.label}</span>
              </div>
            </label>
          ))}
        </div>
      </div>

      <!-- Section -->
      <div class="space-y-4">
        <label class="text-sm font-medium text-gray-700">Section *</label>
        <div class="grid md:grid-cols-3 gap-4">
          {sections.map(section => (
            <label class="relative flex cursor-pointer">
              <input
                type="radio"
                name="section"
                value={section.id}
                required
                class="peer sr-only"
              />
              <div class="w-full p-4 rounded-xl border-2 border-gray-200 bg-white hover:border-sky-200 peer-checked:border-sky-500 peer-checked:bg-sky-50 transition-all flex items-center gap-3">
                <Icon name={section.icon} class="w-5 h-5 text-sky-600" />
                <span class="text-gray-700 font-medium">{section.label}</span>
              </div>
            </label>
          ))}
        </div>
      </div>

      <!-- Description -->
      <div class="space-y-2">
        <label for="description" class="text-sm font-medium text-gray-700 flex items-center gap-2">
          <Icon name="tabler:file-description" class="w-4 h-4 text-gray-400" />
          Description du projet *
        </label>
        <textarea
          id="description"
          name="description"
          rows="4"
          required
          placeholder="Décrivez votre projet, son contexte et ses objectifs..."
          class="form-textarea"
        ></textarea>
      </div>

      <!-- Compétences -->
      <div class="space-y-2">
        <label for="competences" class="text-sm font-medium text-gray-700 flex items-center gap-2">
          <Icon name="tabler:target" class="w-4 h-4 text-gray-400" />
          Compétences développées *
        </label>
        <textarea
          id="competences"
          name="competences"
          rows="3"
          required
          placeholder="Quelles compétences les élèves développent-ils ?"
          class="form-textarea"
        ></textarea>
      </div>

      <!-- Résultats -->
      <div class="space-y-2">
        <label for="resultats" class="text-sm font-medium text-gray-700 flex items-center gap-2">
          <Icon name="tabler:chart-bar" class="w-4 h-4 text-gray-400" />
          Résultats observés
        </label>
        <textarea
          id="resultats"
          name="resultats"
          rows="3"
          placeholder="Quels résultats avez-vous observés ?"
          class="form-textarea"
        ></textarea>
      </div>

      <!-- Liens -->
      <div class="space-y-2">
        <label for="links" class="block text-sm font-medium text-gray-700">
          Liens du projet
        </label>
        <input
          type="text"
          name="links"
          id="links"
          placeholder="Site web, vidéo, compte Twitter..."
          class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 placeholder-gray-400 transition-colors duration-200"
        />
        <p class="text-sm text-gray-500">
          Ajoutez vos liens séparés par des virgules
        </p>
      </div>
    </div>
  </div>

  <!-- Boutons -->
  <div class="flex justify-end mt-8 mb-8">
    <button
      type="submit"
      class="group inline-flex items-center gap-3 text-lg px-8 py-4 bg-[--ootb-blue] hover:bg-[#4d72cd] text-white font-medium shadow-lg hover:shadow-xl hover:-translate-y-0.5 transition-all duration-300 rounded-xl mb-8"
    >
      <Icon name="tabler:send" class="w-6 h-6 group-hover:translate-x-0.5 transition-transform" />
      <span>Soumettre le projet</span>
    </button>
  </div>
</form>

<style>
  .form-input,
  .form-textarea {
    @apply w-full px-4 py-3 rounded-xl border border-gray-200 bg-gray-50/50 
           focus:ring-2 focus:ring-sky-500/20 focus:border-sky-500 focus:bg-white
           placeholder:text-gray-400
           transition-all duration-200;
  }

  .button-primary {
    @apply inline-flex items-center gap-2 px-6 py-3 rounded-xl
           bg-gradient-to-r from-sky-600 to-blue-600 text-white font-medium
           hover:from-sky-500 hover:to-blue-500
           focus:ring-2 focus:ring-offset-2 focus:ring-sky-500
           transform hover:-translate-y-0.5 active:translate-y-0
           transition-all duration-200;
  }

  /* Effet de hover sur les cartes */
  .bg-white {
    @apply transform hover:-translate-y-1 transition-all duration-300;
  }
</style> 