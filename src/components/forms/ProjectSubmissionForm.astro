---
import { Icon } from 'astro-icon/components';
import appelProjetData from '~/content/appel_projet/index.json';

// Extraction des données du formulaire depuis le fichier JSON
const { personal, project } = appelProjetData.formulaire;

// Utilisation des données du JSON pour les types d'enseignement et les sections
const teachingTypes = project.teachingTypes;
const sections = project.sections;
---

<form class="space-y-8 max-w-4xl mx-auto -mt-12">
  <!-- Informations personnelles -->
  <div class="bg-white/95 backdrop-blur-sm rounded-2xl p-8 shadow-lg border border-white/60 hover:shadow-xl transition-all duration-300">
    <div class="flex items-center gap-4 mb-8">
      <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-sky-100 to-sky-50 flex items-center justify-center">
        <Icon name="tabler:user" class="w-6 h-6 text-sky-600" />
      </div>
      <div>
        <h3 class="text-xl md:text-2xl font-bold text-sky-900">{personal.title}</h3>
        <p class="text-gray-500 text-sm">{personal.subtitle}</p>
      </div>
    </div>

    <div class="grid md:grid-cols-2 gap-8">
      <div class="space-y-2">
        <label for="prenom" class="text-sm font-medium text-gray-700 flex items-center gap-2">
          <Icon name="tabler:id" class="w-4 h-4 text-sky-500/70" />
          {personal.firstName} *
        </label>
        <input 
          type="text" 
          id="prenom" 
          name="prenom" 
          required
          class="form-input"
        />
      </div>

      <div class="space-y-2">
        <label for="nom" class="text-sm font-medium text-gray-700 flex items-center gap-2">
          <Icon name="tabler:id" class="w-4 h-4 text-sky-500/70" />
          {personal.lastName} *
        </label>
        <input 
          type="text" 
          id="nom" 
          name="nom" 
          required
          class="form-input"
        />
      </div>

      <div class="space-y-2">
        <label for="email" class="text-sm font-medium text-gray-700 flex items-center gap-2">
          <Icon name="tabler:mail" class="w-4 h-4 text-sky-500/70" />
          {personal.email} *
        </label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          required
          class="form-input"
        />
      </div>

      <div class="space-y-2">
        <label for="telephone" class="text-sm font-medium text-gray-700 flex items-center gap-2">
          <Icon name="tabler:phone" class="w-4 h-4 text-sky-500/70" />
          {personal.phone}
        </label>
        <input 
          type="tel" 
          id="telephone" 
          name="telephone"
          class="form-input"
        />
      </div>
    </div>
  </div>

  <!-- Informations du projet -->
  <div class="bg-white/95 backdrop-blur-sm rounded-2xl p-8 shadow-lg border border-white/60 hover:shadow-xl transition-all duration-300">
    <div class="flex items-center gap-4 mb-8">
      <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-sky-100 to-sky-50 flex items-center justify-center">
        <Icon name="tabler:bulb" class="w-6 h-6 text-sky-600" />
      </div>
      <div>
        <h3 class="text-xl md:text-2xl font-bold text-sky-900">{project.title}</h3>
        <p class="text-gray-500 text-sm">{project.subtitle}</p>
      </div>
    </div>

    <div class="space-y-8">
      <div class="space-y-2">
        <label for="titre" class="text-sm font-medium text-gray-700 flex items-center gap-2">
          <Icon name="tabler:heading" class="w-4 h-4 text-sky-500/70" />
          {project.projectTitle} *
        </label>
        <input 
          type="text" 
          id="titre" 
          name="titre" 
          required
          placeholder={project.projectTitlePlaceholder}
          class="form-input"
        />
      </div>

      <!-- Type d'enseignement -->
      <div class="space-y-4">
        <label class="text-sm font-medium text-gray-700 flex items-center gap-2">
          <Icon name="tabler:school" class="w-4 h-4 text-sky-500/70" />
          {project.teachingType} *
        </label>
        <div class="grid md:grid-cols-3 gap-4">
          {teachingTypes.map(type => (
            <label class="relative flex cursor-pointer">
              <input
                type="radio"
                name="type-enseignement"
                value={type.id}
                required
                class="peer sr-only"
              />
              <div class="w-full p-4 rounded-xl border-2 border-gray-200 bg-white hover:border-[#6ab29e]/20 peer-checked:border-[#6ab29e] peer-checked:bg-[#6ab29e]/5 transition-all flex items-center justify-center">
                <span class="text-gray-700 font-medium">{type.label}</span>
              </div>
            </label>
          ))}
        </div>
      </div>

      <!-- Section -->
      <div class="space-y-4">
        <label class="text-sm font-medium text-gray-700 flex items-center gap-2">
          <Icon name="tabler:category" class="w-4 h-4 text-sky-500/70" />
          {project.section} *
        </label>
        <div class="grid md:grid-cols-3 gap-4">
          {sections.map(section => (
            <label class="relative flex cursor-pointer">
              <input
                type="radio"
                name="section"
                value={section.id}
                required
                class="peer sr-only"
              />
              <div class="w-full p-4 rounded-xl border-2 border-gray-200 bg-white hover:border-[#6ab29e]/20 peer-checked:border-[#6ab29e] peer-checked:bg-[#6ab29e]/5 transition-all flex items-center justify-center">
                <span class="text-gray-700 font-medium">{section.label}</span>
              </div>
            </label>
          ))}
        </div>
      </div>

      <!-- Description -->
      <div class="space-y-2">
        <label for="description" class="text-sm font-medium text-gray-700 flex items-center gap-2">
          <Icon name="tabler:file-description" class="w-4 h-4 text-sky-500/70" />
          {project.description} *
        </label>
        <textarea
          id="description"
          name="description"
          rows="4"
          required
          placeholder={project.descriptionPlaceholder}
          class="form-textarea"
        ></textarea>
      </div>

      <!-- Compétences -->
      <div class="space-y-2">
        <label for="competences" class="text-sm font-medium text-gray-700 flex items-center gap-2">
          <Icon name="tabler:list-check" class="w-4 h-4 text-sky-500/70" />
          {project.skills} *
        </label>
        <textarea
          id="competences"
          name="competences"
          rows="3"
          required
          placeholder={project.skillsPlaceholder}
          class="form-textarea"
        ></textarea>
      </div>

      <!-- Résultats -->
      <div class="space-y-2">
        <label for="resultats" class="text-sm font-medium text-gray-700 flex items-center gap-2">
          <Icon name="tabler:chart-bar" class="w-4 h-4 text-sky-500/70" />
          {project.results}
        </label>
        <textarea
          id="resultats"
          name="resultats"
          rows="3"
          placeholder={project.resultsPlaceholder}
          class="form-textarea"
        ></textarea>
      </div>

      <!-- Liens -->
      <div class="space-y-2">
        <label for="links" class="block text-sm font-medium text-gray-700 flex items-center gap-2">
          <Icon name="tabler:link" class="w-4 h-4 text-sky-500/70" />
          {project.links}
        </label>
        <input
          type="text"
          name="links"
          id="links"
          placeholder={project.linksPlaceholder}
          class="form-input"
        />
        <p class="text-sm text-gray-500">
          {project.linksHelp}
        </p>
      </div>

      <!-- Bouton de soumission -->
      <div class="flex justify-end pt-8">
        <button
          type="submit"
          class="group inline-flex items-center gap-3 text-lg px-8 py-4 bg-gradient-to-br from-sky-500 to-sky-600 hover:from-sky-600 hover:to-sky-700 text-white font-medium shadow-lg hover:shadow-xl hover:-translate-y-0.5 transition-all duration-300 rounded-xl"
        >
          <Icon name="tabler:send" class="w-6 h-6 group-hover:translate-x-0.5 transition-transform" />
          <span>{project.submitButton}</span>
        </button>
      </div>
    </div>
  </div>
</form>

<style>
  .form-input,
  .form-textarea {
    @apply w-full px-4 py-3 rounded-xl border border-gray-200 bg-white/50 
           focus:ring-2 focus:ring-sky-500/20 focus:border-sky-500 focus:bg-white
           placeholder:text-gray-400
           transition-all duration-200;
  }

  .button-primary {
    @apply inline-flex items-center gap-2 px-6 py-3 rounded-xl
           bg-gradient-to-r from-sky-500 to-sky-600 text-white font-medium
           hover:from-sky-600 hover:to-sky-700
           focus:ring-2 focus:ring-offset-2 focus:ring-sky-500
           transform hover:-translate-y-0.5 active:translate-y-0
           transition-all duration-200;
  }

  /* Effet de hover sur les cartes */
  .bg-white {
    @apply transform hover:-translate-y-1 transition-all duration-300;
  }
</style> 