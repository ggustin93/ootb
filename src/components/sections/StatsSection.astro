---
interface Stat {
  number: string;
  label: string;
}

interface Props {
  stats: Stat[];
}

const { stats } = Astro.props;
---

<section class="py-20 bg-gradient-to-b from-white to-sky-50/30">
  <div class="max-w-6xl mx-auto px-4">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      {stats.map(({ number, label }) => (
        <div class="group relative">
          <!-- Effet de carte avec animation subtile -->
          <div class="absolute inset-0 bg-gradient-to-br from-sky-100/50 to-white rounded-2xl -rotate-2 transform transition-transform group-hover:rotate-0"></div>
          <div class="relative bg-white rounded-2xl p-6 text-center shadow-sm hover:shadow-md transition-all">
            <div class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-sky-500 to-sky-600 bg-clip-text text-transparent mb-2">
              {number}
            </div>
            <div class="text-gray-600 font-medium">{label}</div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section> 