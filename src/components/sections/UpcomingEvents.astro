---
import { Icon } from 'astro-icon/components';
import SectionDivider from '~/components/ui/SectionDivider.astro';
import EventCard from '~/components/ui/EventCard.astro';

interface Event {
  title: string;
  description: string;
  date: string;
  badge: string;
  badgeColor: 'purple' | 'blue';
  link: string;
  cols?: number;
}

interface Props {
  events: Event[];
}

const { events } = Astro.props;
---

<section class="py-24 px-4 md:px-8 bg-gradient-to-br from-gray-50 to-white">
  <div class="max-w-7xl mx-auto">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-end gap-6 mb-12">
      <div>
        <span class="inline-block px-4 py-2 text-sm font-medium bg-purple-100/80 text-purple-700 rounded-full mb-4 backdrop-blur-sm">
          <Icon name="tabler:calendar" class="w-4 h-4 inline-block mr-2" />
          Agenda 2025
        </span>
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 tracking-tight">
          Événements à venir
        </h2>
      </div>
      <a href="/events" class="group flex items-center gap-2 text-purple-600 hover:text-purple-700 bg-white px-6 py-3 rounded-full hover:shadow-md transition-all duration-300">
        Voir tout
        <Icon name="tabler:arrow-right" class="w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" />
      </a>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {events.map((event) => (
        <EventCard {...event} />
      ))}
    </div>
  </div>
</section> 