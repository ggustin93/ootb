---
interface Props {
  variant?: 'festival' | 'podcast' | 'emission' | 'appel';
  class?: string;
}

const { variant = 'festival', class: className } = Astro.props;

const variants = {
  festival: 'bg-[var(--ootb-orange)] text-white hover:bg-[color-mix(in_srgb,var(--ootb-orange)_90%,black)]',
  podcast: 'bg-[var(--ootb-violet)] text-white hover:bg-[color-mix(in_srgb,var(--ootb-violet)_90%,black)]',
  emission: 'bg-[var(--ootb-green)] text-white hover:bg-[color-mix(in_srgb,var(--ootb-green)_90%,black)]',
  appel: 'bg-[var(--ootb-blue)] text-white hover:bg-[color-mix(in_srgb,var(--ootb-blue)_90%,black)]'
};

---

<span
  class:list={[
    'inline-flex items-center justify-center',
    'text-sm font-medium',
    'transform skew-x-[-12deg]',
    'shadow-sm hover:shadow-md',
    'transition-all duration-300',
    'w-full whitespace-nowrap',
    variants[variant],
    className
  ]}
>
  <span class="transform skew-x-[12deg] font-bebas-neue italic font-extrabold uppercase tracking-wide px-6 py-2.5">
    <slot />
  </span>
</span> 