---
interface Props {
  variant?: 'festival' | 'podcast' | 'emission' | 'appel' | 'live' | 'actualite' | 'fiche';
  class?: string;
}

const { variant = 'festival', class: className } = Astro.props;

const variants = {
  festival: 'bg-[var(--ootb-orange)] text-white hover:bg-[color-mix(in_srgb,var(--ootb-orange)_90%,black)]',
  podcast: 'bg-[var(--ootb-violet)] text-white hover:bg-[color-mix(in_srgb,var(--ootb-violet)_90%,black)]',
  emission: 'bg-[var(--ootb-green)] text-white hover:bg-[color-mix(in_srgb,var(--ootb-green)_90%,black)]',
  appel: 'bg-[var(--ootb-blue)] text-white hover:bg-[color-mix(in_srgb,var(--ootb-blue)_90%,black)]',
  live: 'bg-[#1877F2] text-white hover:bg-[color-mix(in_srgb,#1877F2_90%,black)]',
  actualite: 'bg-gray-700 text-white hover:bg-gray-800',
  fiche: 'bg-[var(--ootb-blue)] text-white hover:bg-[color-mix(in_srgb,var(--ootb-blue)_90%,black)]'
};

---

<span
  class:list={[
    'inline-flex italic items-center justify-center',
    'text-base font-bold uppercase tracking-wide',
    'transform skew-x-[-12deg]',
    'shadow-sm hover:shadow-md',
    'transition-all duration-300',
    'whitespace-nowrap',
    'px-7 py-3',
    variants[variant],
    className
  ]}
>
  <span class="transform skew-x-[12deg] flex items-center gap-2">
    <slot />
  </span>
</span> 