---
import Layout from '~/layouts/PageLayout.astro';
import { Icon } from 'astro-icon/components';
import Image from '~/components/common/Image.astro';
import SectionDivider from '~/components/ui/SectionDivider.astro';
import ContentHeroSection from '~/components/sections/ContentHeroSection.astro';

// Importer les données du fichier JSON
import aboutData from '~/content/about/index.json';

const { metadata, hero, quiSommesNous, vision, actions, missions, valeurs, equipe, partenaires } = aboutData;

// Utiliser les assets locaux pour les images qui sont des chemins locaux
import teamImage from '~/assets/images/ootb_team.webp';
import logo_blanc from '~/assets/images/logo_ootb_garcon_blanc.svg';

---

<Layout {metadata}>
  <ContentHeroSection
    logo={logo_blanc}
    logoClass="w-[200px] md:w-[300px] h-auto mx-auto md:mx-0 md:transform md:scale-150 md:origin-left"
    heroImage={teamImage}
    quote={hero.quote}
    scroll={{
      targetId: "qui-sommes-nous",
      label: hero.scrollLabel,
      position: "left-[20%] bottom-[33%]",
      hideOnMobile: true
    }}
  />

  <!-- Qui sommes-nous -->
  <section id="qui-sommes-nous" class="pb-16 bg-white relative overflow-hidden">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <SectionDivider variant="primary" class="mb-12">{quiSommesNous.title}</SectionDivider>
        
        <div class="md:flex md:gap-12 md:items-start">
          <div class="md:w-1/3 mb-8 md:mb-0">
            <div class="rounded-xl overflow-hidden shadow-md">
              <img
                src={quiSommesNous.image}
                alt={quiSommesNous.imageAlt}
                class="w-full h-auto object-cover aspect-[3/4]"
              />
            </div>
          </div>
          <div class="md:w-2/3">
            <div class="prose prose-lg max-w-none space-y-6">
              {quiSommesNous.paragraphs.map(paragraph => (
                <p class="text-gray-700 leading-relaxed">
                  {paragraph}
                </p>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Notre Vision -->
  <section id="vision" class="py-16 bg-[color-mix(in_srgb,var(--ootb-yellow)_5%,white)] relative overflow-hidden">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <SectionDivider variant="primary" class="mb-12">{vision.title}</SectionDivider>
        
        <!-- Citation -->
        <div class="bg-gradient-to-br from-[--ootb-turquoise] to-[color-mix(in_srgb,var(--ootb-turquoise)_80%,var(--ootb-violet))] rounded-xl p-8 shadow-lg relative overflow-hidden group mb-8">
          <p class="font-handwritten text-2xl md:text-3xl text-white font-light leading-relaxed relative z-10">
            "{vision.quote}"
          </p>
          
          <!-- Guillemets décoratifs -->
          <div class="absolute top-2 left-2 text-white/10 text-6xl font-serif">"</div>
          <div class="absolute bottom-2 right-2 text-white/10 text-6xl font-serif rotate-180">"</div>
        </div>

        <!-- Contenu -->
        <div class="bg-white/80 backdrop-blur-sm rounded-xl p-8 shadow-lg">
          <p class="text-gray-700 leading-relaxed mb-6">
            {vision.description}
          </p>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="space-y-3">
              <h3 class="text-lg font-semibold text-gray-900">Nos Actions</h3>
              <ul class="space-y-2">
                {actions.map(action => (
                  <li class="flex items-center gap-2">
                    <Icon name="tabler:check" class="w-5 h-5 text-[--ootb-turquoise]" />
                    <span class="text-gray-700">{action}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Nos Missions -->
  <section id="missions" class="py-16 bg-[color-mix(in_srgb,var(--ootb-orange)_5%,white)] relative overflow-hidden">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <SectionDivider variant="primary" class="mb-12">Nos Missions</SectionDivider>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {missions.map(mission => (
            <div class="bg-white/80 backdrop-blur-sm rounded-xl p-6 hover:shadow-md">
              <div class="flex items-start gap-4">
                <div class="bg-[--ootb-turquoise] rounded-lg p-3">
                  <Icon name={mission.icon} class="w-6 h-6 text-white" />
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-2">{mission.title}</h3>
                  <p class="text-gray-700">{mission.description}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Nos Valeurs -->
  <section id="valeurs" class="py-16 bg-white relative overflow-hidden">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <SectionDivider variant="primary" class="mb-12">Nos Valeurs</SectionDivider>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {valeurs.map(valeur => (
            <div class="bg-white/80 backdrop-blur-sm rounded-xl p-6 hover:shadow-md relative group">
              <div class="relative flex items-start gap-4">
                <div class="bg-[--ootb-violet] rounded-lg p-3 ">
                  <Icon name={valeur.icon} class="w-6 h-6 text-white" />
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-2">{valeur.title}</h3>
                  <p class="text-gray-700">{valeur.description}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Notre Équipe -->
  <section id="equipe" class="py-16 bg-[color-mix(in_srgb,var(--ootb-violet)_5%,white)] relative overflow-hidden">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <SectionDivider variant="primary" class="mb-12">{equipe.title}</SectionDivider>
        
        <!-- Fondatrices -->
        <div class="grid md:grid-cols-2 gap-8 mb-12">
          {equipe.membres.slice(0, 2).map(membre => (
            <div class="bg-white/80 backdrop-blur-sm rounded-xl p-6 shadow-sm">
              <div class="flex items-start gap-6">
                <div class="flex-shrink-0">
                  <div class="relative w-24 h-24 rounded-xl overflow-hidden shadow-md group">
                    <Image
                      src={membre.photo}
                      alt={membre.name}
                      class="w-full h-full object-cover"
                      widths={[96]}
                      sizes="96px"
                      aspectRatio="1:1"
                      loading="lazy"
                    />
                  </div>
                </div>
                <div class="flex-grow">
                  <h3 class="text-xl font-semibold text-gray-900 mb-2">{membre.name}</h3>
                  <p class="text-[--ootb-violet] font-medium mb-3">{membre.role}</p>
                  <p class="text-gray-700 mb-4">{membre.description}</p>
                </div>
              </div>
            </div>
          ))}
        </div>

        <!-- Présentation -->
        <div class="prose prose-lg max-w-none bg-white/80 backdrop-blur-sm rounded-xl p-8 mb-12">
          <p class="text-gray-700 leading-relaxed">
            {equipe.description}
          </p>
        </div>

        <!-- Autres membres -->
        <div class="grid md:grid-cols-2 gap-8">
          {equipe.membres.slice(2).map(membre => (
            <div class="bg-white/80 backdrop-blur-sm rounded-xl p-6 shadow-sm">
              <div class="flex items-start gap-6">
                <!-- Photo -->
                <div class="flex-shrink-0">
                  <div class="relative w-24 h-24 rounded-xl overflow-hidden shadow-md group">
                    <Image
                      src={membre.photo}
                      alt={membre.name}
                      class="w-full h-full object-cover"
                      widths={[96]}
                      sizes="96px"
                      aspectRatio="1:1"
                      loading="lazy"
                    />
                  </div>
                </div>
                <!-- Informations -->
                <div class="flex-grow">
                  <h3 class="text-xl font-semibold text-gray-900 mb-2">{membre.name}</h3>
                  <p class="text-[--ootb-violet] font-medium mb-3">{membre.role}</p>
                  <p class="text-gray-700 mb-4">{membre.description}</p>
                  <div class="space-y-2">
                    <div class="flex items-center gap-2 text-gray-600">
                      <Icon name="tabler:mail" class="w-5 h-5" />
                      <a href={`mailto:${membre.contact.email}`} class="hover:text-[--ootb-turquoise]">
                        {membre.contact.email}
                      </a>
                    </div>
                    <div class="flex items-center gap-2 text-gray-600">
                      <Icon name="tabler:phone" class="w-5 h-5" />
                      <a href={`tel:${membre.contact.phone.replace(/[^0-9+]/g, '')}`} class="hover:text-[--ootb-turquoise]">
                        {membre.contact.phone}
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Partenaires -->
  <section id="partenaires" class="py-16 bg-white relative overflow-hidden">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <SectionDivider variant="primary" class="mb-12">{partenaires.title}</SectionDivider>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 md:gap-8">
          {partenaires.liste.map(partenaire => (
            <div class="bg-white/80 backdrop-blur-sm rounded-xl p-6 text-center hover:shadow-md relative group">
              <div class="h-24 flex items-center justify-center">
                <a href={partenaire.lien} target="_blank" rel="noopener noreferrer">
                  <Image
                    src={partenaire.logo}
                    alt={`Logo ${partenaire.nom}`}
                    class="max-h-full w-auto"
                    widths={[200]}
                    sizes="200px"
                    loading="lazy"
                  />
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
</Layout>