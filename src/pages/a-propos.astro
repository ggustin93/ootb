const teamMembers = [
  {
    name: 'Sophie Vanden Plas',
    role: 'Co-fondatrice',
    description: 'Formatrice à l\'IFEC et créatrice de la structure Evocation qui accompagne des enfants en gestion mentale.',
    photo: 'https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80',
    contact: {
      email: 'sophie@festivalootb.com',
      phone: '0476/46.24.25'
    }
  },
  {
    name: 'Alexia Martin',
    role: 'Co-fondatrice',
    description: 'Entrepreneuse dans l\'âme et créatrice d\'événements grands publics.',
    photo: 'https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80',
    contact: {
      email: 'alexia@festivalootb.com',
      phone: '0477/45.56.11'
    }
  }
];

const actions = [
  'L\'organisation du Festival Out of the Books',
  'Des journées thématiques',
  'Des Lives Facebook',
  'L\'émission télévisée "Pédagoscope"',
  'Le podcast "Education: mode d\'emploi"',
  'L\'appel à projets "Les enseignants ont du talent"'
];

const partenaires = [
  {
    name: 'Ministère de l\'Éducation',
    logo: '/src/assets/images/partners/education.svg',
    description: 'Partenaire institutionnel'
  },
  {
    name: 'Réseau Canopé',
    logo: '/src/assets/images/partners/canope.svg',
    description: 'Partenaire pédagogique'
  },
  {
    name: 'EdTech France',
    logo: '/src/assets/images/partners/edtech.svg',
    description: 'Partenaire innovation'
  }
];
---

<Layout {metadata}>
  <GradientHeroSection>
    <!-- Éléments décoratifs flottants -->
    <div class="absolute inset-0 overflow-hidden">
      <!-- Formes géométriques subtiles -->
      <div class="absolute w-32 h-32 rounded-full bg-white/10 blur-2xl -top-8 -left-8 animate-float"></div>
      <div class="absolute w-48 h-48 rounded-full bg-white/10 blur-3xl bottom-32 right-16 animate-float-delayed"></div>
      <!-- Livres flottants -->
      <div class="absolute w-20 h-28 -rotate-12 top-[15%] left-[40%] opacity-30 transition-transform hover:-translate-y-2 duration-1000">
        <Icon name="tabler:book-2" class="w-full h-full text-white filter drop-shadow-lg" />
      </div>
      <div class="absolute w-16 h-24 rotate-45 top-[35%] right-[12%] opacity-30 transition-transform hover:translate-y-2 duration-1000">
        <Icon name="tabler:book" class="w-full h-full text-white filter drop-shadow-lg" />
      </div>
    </div>

    <div class="relative z-10 container mx-auto px-4 pt-32">
      <div class="max-w-6xl mx-auto">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div class="text-center md:text-left">
            <h1 class="text-left">
              <Image
                src={logo_blanc}
                alt="Out of the Books"
                class="w-[400px] h-auto"
                widths={[400]}
                sizes="400px"
                loading="eager"
                decoding="async"
              />
              <span class="block text-3xl md:text-4xl mt-4 font-light text-[--ootb-yellow] italic">À propos</span>
            </h1>
            <p class="text-xl text-white/90 font-light italic mt-6 mb-8">
              Changer ensemble l'éducation de demain
            </p>
            <div class="flex flex-wrap gap-4 justify-center md:justify-start">
              <div class="flex items-center gap-3 bg-white/10 backdrop-blur-sm rounded-lg px-4 py-2">
                <Icon name="tabler:users" class="w-5 h-5 text-white" />
                <span class="text-white">+1000 enseignants</span>
              </div>
              <div class="flex items-center gap-3 bg-white/10 backdrop-blur-sm rounded-lg px-4 py-2">
                <Icon name="tabler:school" class="w-5 h-5 text-white" />
                <span class="text-white">+100 établissements</span>
              </div>
              <div class="flex items-center gap-3 bg-white/10 backdrop-blur-sm rounded-lg px-4 py-2">
                <Icon name="tabler:certificate" class="w-5 h-5 text-white" />
                <span class="text-white">+50 experts</span>
              </div>
            </div>
          </div>

          <!-- Image/Logo -->
          <div class="relative hidden md:block">
            <div class="relative z-10 transform hover:-rotate-2 transition-transform duration-300">
              <Image
                src={teamImage}
                alt="L'équipe Out of the Books"
                class="rounded-2xl shadow-xl"
                widths={[400, 800]}
                sizes="(max-width: 768px) 400px, 800px"
                aspectRatio="4:3"
                loading="eager"
                decoding="async"
              />
            </div>
            <!-- Élément décoratif derrière l'image -->
            <div class="absolute inset-0 bg-[--ootb-violet] rounded-2xl transform rotate-3 translate-x-4 translate-y-4 -z-10"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Vague décorative -->
    <div class="absolute -bottom-1 left-0 right-0">
      <svg 
        xmlns="http://www.w3.org/2000/svg" 
        viewBox="0 0 1440 320" 
        class="w-full h-[120px] md:h-[180px] text-white"
        preserveAspectRatio="none"
      >
        <path 
          fill="currentColor" 
          fill-opacity="1" 
          d="M0,96L48,112C96,128,192,160,288,160C384,160,480,128,576,112C672,96,768,96,864,112C960,128,1056,160,1152,160C1248,160,1344,128,1392,112L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
        ></path>
      </svg>
    </div>
  </GradientHeroSection>

  <!-- Contexte -->
  <section class="py-16 bg-white relative overflow-hidden">
    <!-- Éléments décoratifs -->
    <div class="absolute top-0 right-0 w-64 h-64 bg-[--ootb-turquoise]/5 rounded-full blur-3xl transform translate-x-1/2 -translate-y-1/2"></div>
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-[--ootb-violet]/5 rounded-full blur-3xl transform -translate-x-1/2 translate-y-1/2"></div>

    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <SectionDivider variant="primary" class="mb-12">Contexte</SectionDivider>
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div class="prose prose-lg max-w-none order-2 md:order-1">
            <p class="text-gray-700 leading-relaxed">
              Face aux défis croissants de l'éducation moderne et à l'évolution rapide de notre société, nous avons constaté un besoin urgent de repenser nos approches pédagogiques. Les méthodes traditionnelles, bien qu'ayant fait leurs preuves, ne suffisent plus à préparer pleinement les apprenants aux enjeux du XXIe siècle.
            </p>
            <p class="text-gray-700 leading-relaxed mt-4">
              C'est de ce constat qu'est né Out of the Books : une plateforme dédiée à l'innovation pédagogique, conçue pour accompagner les enseignants, les formateurs et tous les acteurs de l'éducation dans leur démarche de transformation.
            </p>
          </div>
          <div class="relative group order-1 md:order-2">
            <div class="absolute inset-0 bg-[--ootb-turquoise] rounded-2xl transform rotate-3 group-hover:rotate-6 transition-transform duration-300"></div>
            <Image
              src="https://images.unsplash.com/photo-1509062522246-3755977927d7?ixlib=rb-4.0.3&auto=format&fit=crop&w=2532&q=80"
              alt="Éducation moderne et innovation"
              class="relative rounded-2xl shadow-lg transform group-hover:-rotate-1 transition-transform duration-300 aspect-[4/3] object-cover w-full"
              widths={[400, 800]}
              sizes="(max-width: 768px) 400px, 800px"
              loading="eager"
              decoding="async"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Notre Vision -->
  <section class="py-16 bg-[color-mix(in_srgb,var(--ootb-violet)_5%,white)] relative overflow-hidden">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <SectionDivider variant="primary" class="mb-12">Notre Vision</SectionDivider>
        
        <!-- Citation -->
        <div class="bg-gradient-to-br from-[--ootb-turquoise] to-[color-mix(in_srgb,var(--ootb-turquoise)_80%,var(--ootb-violet))] rounded-xl p-8 shadow-lg relative overflow-hidden group mb-8">
          <!-- Effet de brillance au hover -->
          <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-700 bg-gradient-to-r from-transparent via-white/10 to-transparent -translate-x-full group-hover:translate-x-full transform duration-1000"></div>
          
          <p class="font-handwritten text-2xl md:text-3xl text-white font-light leading-relaxed relative z-10">
            "Nous croyons en une éducation innovante, inclusive et épanouissante, où chaque apprenant peut développer son plein potentiel."
          </p>
          
          <!-- Guillemets décoratifs -->
          <div class="absolute top-2 left-2 text-white/10 text-6xl font-serif">"</div>
          <div class="absolute bottom-2 right-2 text-white/10 text-6xl font-serif rotate-180">"</div>
        </div>

        <!-- Contenu -->
        <div class="bg-white/80 backdrop-blur-sm rounded-xl p-8 shadow-lg">
          <p class="text-gray-700 leading-relaxed mb-6">
            Dans une société en perpétuelle évolution, le système éducatif doit être repensé et tenir compte des besoins de la nouvelle génération. Nous souhaitons retrouver le plaisir d'apprendre et favoriser la créativité débordante de nos enfants.
          </p>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="space-y-3">
              <h3 class="text-lg font-semibold text-gray-900">Nos Actions</h3>
              <ul class="space-y-2">
                {actions.map(action => (
                  <li class="flex items-center gap-2">
                    <Icon name="tabler:check" class="w-5 h-5 text-[--ootb-turquoise]" />
                    <span class="text-gray-700">{action}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Nos Missions -->
  <section class="py-16 bg-[color-mix(in_srgb,var(--ootb-green)_8%,white)] relative overflow-hidden">
    <!-- Mascotte -->
    <div class="absolute bottom-0 right-0 w-[200px] h-[200px] z-20">
      <Image
        src={hero}
        alt=""
        class="w-full h-full object-contain transform scale-x-[-1] rotate-[-5deg]"
        widths={[200]}
        sizes="200px"
        aspectRatio="1:1"
        loading="lazy"
        decoding="async"
      />
    </div>
    <!-- Vagues décoratives -->
    <div class="absolute inset-0 opacity-5">
      <svg class="absolute w-full h-full" viewBox="0 0 1440 320" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none">
        <path fill="var(--ootb-turquoise)" d="M0,96L48,112C96,128,192,160,288,160C384,160,480,128,576,112C672,96,768,96,864,112C960,128,1056,160,1152,160C1248,160,1344,128,1392,112L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path>
      </svg>
    </div>

    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <SectionDivider variant="primary" class="mb-12">Nos Missions</SectionDivider>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {missions.map(mission => (
            <div class="bg-white/80 backdrop-blur-sm rounded-xl p-6 hover:shadow-md transition-all duration-300 hover:-translate-y-1">
              <div class="flex items-start gap-4">
                <div class="bg-[--ootb-turquoise] rounded-lg p-3 transform transition-transform duration-300 hover:rotate-6">
                  <Icon name={mission.icon} class="w-6 h-6 text-white" />
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-2">{mission.title}</h3>
                  <p class="text-gray-700">{mission.description}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Nos Valeurs -->
  <section class="py-16 bg-[color-mix(in_srgb,var(--ootb-orange)_5%,white)] relative overflow-hidden">
    <!-- Motif de points décoratifs -->
    <div class="absolute inset-0">
      <div class="grid grid-cols-12 gap-8 opacity-5">
        {Array(48).fill('').map(() => (
          <div class="w-2 h-2 rounded-full bg-[--ootb-violet]"></div>
        ))}
      </div>
    </div>

    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <SectionDivider variant="primary" class="mb-12">Nos Valeurs</SectionDivider>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {valeurs.map(valeur => (
            <div class="bg-white/80 backdrop-blur-sm rounded-xl p-6 hover:shadow-md transition-all duration-300 hover:-translate-y-1 relative group">
              <div class="absolute inset-0 bg-gradient-to-br from-[--ootb-violet]/5 to-transparent rounded-xl transform scale-95 opacity-0 group-hover:scale-100 group-hover:opacity-100 transition-all duration-300"></div>
              <div class="relative flex items-start gap-4">
                <div class="bg-[--ootb-violet] rounded-lg p-3 transform transition-transform duration-300 group-hover:rotate-6">
                  <Icon name={valeur.icon} class="w-6 h-6 text-white" />
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-2">{valeur.title}</h3>
                  <p class="text-gray-700">{valeur.description}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Nos Réalisations -->
  {/* Nos Réalisations - Section commentée car informations présentes dans d'autres sections
  <section class="py-16 bg-white relative overflow-hidden">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <SectionDivider variant="primary" class="mb-12">Nos Réalisations</SectionDivider>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {realisations.map(realisation => (
            <div class="bg-white shadow-sm rounded-xl p-6 hover:shadow-md transition-all duration-300">
              <div class="flex items-start gap-4">
                <div class="bg-[--ootb-violet] rounded-lg p-3">
                  <Icon name={realisation.icon} class="w-6 h-6 text-white" />
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-2">{realisation.title}</h3>
                  <p class="text-gray-700">{realisation.description}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
  */}

  <!-- Notre Équipe -->
  <section class="py-16 bg-[color-mix(in_srgb,var(--ootb-blue)_5%,white)] relative overflow-hidden">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <SectionDivider variant="primary" class="mb-12">Notre Équipe</SectionDivider>
        <div class="grid md:grid-cols-2 gap-8">
          {teamMembers.map(member => (
            <div class="bg-white/80 backdrop-blur-sm rounded-xl p-6 shadow-sm">
              <div class="flex items-start gap-6">
                <!-- Photo -->
                <div class="flex-shrink-0">
                  <div class="relative w-24 h-24 rounded-xl overflow-hidden shadow-md group">
                    <Image
                      src={member.photo}
                      alt={member.name}
                      class="w-full h-full object-cover transform transition-transform duration-300 group-hover:scale-110"
                      widths={[96]}
                      sizes="96px"
                      aspectRatio="1:1"
                      loading="lazy"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                  </div>
                </div>
                <!-- Informations -->
                <div class="flex-grow">
                  <h3 class="text-xl font-semibold text-gray-900 mb-2">{member.name}</h3>
                  <p class="text-[--ootb-violet] font-medium mb-3">{member.role}</p>
                  <p class="text-gray-700 mb-4">{member.description}</p>
                  <div class="space-y-2">
                    <div class="flex items-center gap-2 text-gray-600">
                      <Icon name="tabler:mail" class="w-5 h-5" />
                      <a href={`mailto:${member.contact.email}`} class="hover:text-[--ootb-turquoise] transition-colors">
                        {member.contact.email}
                      </a>
                    </div>
                    <div class="flex items-center gap-2 text-gray-600">
                      <Icon name="tabler:phone" class="w-5 h-5" />
                      <a href={`tel:${member.contact.phone.replace(/[^0-9+]/g, '')}`} class="hover:text-[--ootb-turquoise] transition-colors">
                        {member.contact.phone}
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Qui sommes-nous -->
  <section class="py-16 bg-[color-mix(in_srgb,var(--ootb-blue)_5%,white)] relative overflow-hidden">
    <!-- Image de fond avec overlay -->
    <div class="absolute inset-0">
      <Image
        src="https://images.unsplash.com/photo-1524178232363-1fb2b075b655?ixlib=rb-4.0.3"
        alt="Équipe collaborative"
        class="w-full h-full object-cover opacity-5"
        widths={[1920]}
        sizes="100vw"
        aspectRatio="16:9"
        loading="lazy"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-[color-mix(in_srgb,var(--ootb-blue)_5%,white)] via-[color-mix(in_srgb,var(--ootb-blue)_5%,white)]/95 to-[color-mix(in_srgb,var(--ootb-blue)_5%,white)]"></div>
    </div>

    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto relative">
        <SectionDivider variant="primary" class="mb-12">Qui sommes-nous ?</SectionDivider>
        <div class="prose prose-lg max-w-none bg-white/80 backdrop-blur-sm rounded-xl p-8">
          <p class="text-gray-700 leading-relaxed">
            Out of the Books est une association créée par des passionnés d'éducation, réunissant des enseignants, des chercheurs, des experts en pédagogie et des professionnels de l'éducation. Notre équipe pluridisciplinaire travaille main dans la main pour identifier, documenter et partager les meilleures pratiques pédagogiques.
          </p>
          <p class="text-gray-700 leading-relaxed mt-4">
            Nous sommes convaincus que l'innovation en éducation ne peut se faire qu'à travers la collaboration et le partage d'expériences. C'est pourquoi nous avons créé cette plateforme, véritable carrefour d'échanges et de ressources pour tous les acteurs de l'éducation.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Partenaires -->
  <section class="py-16 bg-[color-mix(in_srgb,var(--ootb-turquoise)_8%,white)] relative overflow-hidden">
    <!-- Éléments décoratifs -->
    <div class="absolute inset-0">
      <div class="absolute top-0 right-0 w-64 h-64 bg-[--ootb-turquoise]/5 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 left-0 w-96 h-96 bg-[--ootb-violet]/5 rounded-full blur-3xl"></div>
    </div>

    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto relative">
        <SectionDivider variant="primary" class="mb-12">Nos Partenaires</SectionDivider>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {partenaires.map(partenaire => (
            <div class="bg-white/80 backdrop-blur-sm rounded-xl p-6 text-center hover:shadow-md transition-all duration-300 hover:-translate-y-1 relative group">
              <div class="absolute inset-0 bg-gradient-to-t from-gray-50/50 to-transparent rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              <div class="relative">
                <div class="h-24 flex items-center justify-center mb-4">
                  <Image
                    src={partenaire.logo}
                    alt={`Logo ${partenaire.name}`}
                    class="max-h-full w-auto transform transition-transform duration-300 group-hover:scale-105"
                    widths={[200]}
                    sizes="200px"
                    loading="lazy"
                  />
                </div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">{partenaire.name}</h3>
                <p class="text-gray-600 text-sm">{partenaire.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Animations raffinées */
  .animate-float {
