---
import Layout from '~/layouts/PageLayout.astro';
import { Icon } from 'astro-icon/components';
import ProjectSubmissionForm from '~/components/forms/ProjectSubmissionForm.astro';
import Image from '~/components/common/Image.astro';
import logoTalent from '~/assets/images/logo_talent.avif';
import ActionBadge from '~/components/ui/ActionBadge.astro';
import SectionDivider from '~/components/ui/SectionDivider.astro';
import ContentHeroSection from '~/components/sections/ContentHeroSection.astro';
import Button from '~/components/ui/Button.astro';
import ScrollDownArrow from '~/components/ui/ScrollDownArrow.astro';

const metadata = {
  title: 'Appel à projets | Out of the Books',
  description: 'Partagez votre expérience pédagogique innovante et inspirez vos pairs lors du Festival Out of the Books 2024.',
  canonical: 'https://outofthebooks.org/appel-a-projets',
};

const processSteps = [
  {
    icon: 'tabler:bulb',
    title: 'Soumission',
    description: 'Partagez votre projet innovant via notre formulaire en ligne'
  },
  {
    icon: 'tabler:messages',
    title: 'Évaluation',
    description: 'Notre comité évalue les projets selon leur pertinence et impact'
  },
  {
    icon: 'tabler:check',
    title: 'Sélection',
    description: 'Les projets retenus seront publiés et partagés avec la communauté'
  }
];

const criteria = [
  {
    icon: "tabler:bulb-filled",
    title: "Innovation pédagogique",
    description: "Une approche originale qui transforme l'expérience d'apprentissage"
  },
  {
    icon: "tabler:chart-dots",
    title: "Impact mesurable",
    description: "Des résultats concrets sur la progression des élèves"
  },
  {
    icon: "tabler:repeat",
    title: "Facilement reproductible",
    description: "Un projet adaptable par d'autres enseignants"
  },
  {
    icon: "tabler:users",
    title: "Pertinent pour tous",
    description: "Une valeur ajoutée pour la communauté éducative"
  }
];

const floatingIcons = [
  { name: 'tabler:bulb', size: 'lg', position: { top: '15%', left: '40%' }, rotate: '-12deg' },
  { name: 'tabler:messages', size: 'md', position: { top: '35%', right: '12%' }, rotate: '45deg' },
  { name: 'tabler:target', size: 'sm', position: { top: '25%', left: '15%' }, animation: 'float' },
  { name: 'tabler:check', size: 'sm', position: { top: '45%', right: '20%' }, animation: 'float-delayed' }
];

---

<Layout {metadata}>
  <ContentHeroSection
    logo={logoTalent}
    logoClass="w-[350px] md:w-[500px] h-auto mx-auto md:mx-0"
    heroImage="https://images.unsplash.com/photo-1524178232363-1fb2b075b655?q=80&w=800&auto=format&fit=crop"
    quote="Partagez votre expérience pédagogique innovante et inspirez vos pairs lors du Festival Out of the Books 2024."
    quoteColor="--ootb-blue"
    buttons={[
      {
        href: '#processus',
        icon: 'tabler:send',
        label: 'Soumettre mon projet',
        variant: 'outline-blue',
        size: 'lg'
      },
      {
        href: '/category/fiche',
        icon: 'tabler:files',
        label: 'Fiches pédagogiques',
        variant: 'secondary',
        size: 'lg'
      }
    ]}
    scroll={{
      targetId: "criteres",
      label: "En savoir plus",
      position: "bottom-[25%] left-[55%]",
      hideOnMobile: true
    }}
    imageBackgroundColor="--ootb-blue"
  />

  <!-- Critères - PADDING ENCORE PLUS RÉDUIT -->
  <section id="criteres" class="pt-16 pb-24 md:pb-32 relative bg-white scroll-mt-16">
    <!-- Image de fond avec overlay -->
    <div class="absolute inset-0">
      <Image
        src="https://images.unsplash.com/photo-1509062522246-3755977927d7?ixlib=rb-4.0.3"
        alt="Collaboration éducative"
        class="w-full h-full object-cover opacity-5"
        widths={[1920]}
        sizes="100vw"
        aspectRatio="16:9"
        loading="lazy"
      />
      <div class="absolute inset-0 bg-white/90"></div>
    </div>

    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-12">
          <SectionDivider variant="sky" class="mb-6">
            <Icon name="tabler:target" class="w-5 h-5" />
            Critères
          </SectionDivider>
          <h2 class="text-4xl md:text-5xl font-bold text-sky-900 mb-4">
            Ce que nous recherchons
          </h2>
        </div>

        <div class="grid sm:grid-cols-2 gap-6">
          {criteria.map((item) => (
            <div class="group bg-white/90 backdrop-blur-sm rounded-2xl p-6 border border-white/60 hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
              <div class="flex items-start gap-4">
                <div class="inline-flex items-center justify-center w-12 h-12 bg-[#6ab29e]/10 text-[--ootb-blue] rounded-xl transform group-hover:scale-110 group-hover:rotate-3 transition-all duration-300">
                  <Icon name={item.icon} class="w-6 h-6" />
                </div>
                <div>
                  <h3 class="text-xl md:text-2xl font-semibold text-sky-900 mb-2">
                    {item.title}
                  </h3>
                  <p class="text-sm text-gray-600">
                    {item.description}
                  </p>
                </div>
              </div>
            </div>
          ))}
        </div>

        <!-- Vidéo ou image inspirante -->
        <div class="mt-16 p-6 relative rounded-2xl overflow-hidden shadow-2xl group">
          <div class="aspect-video relative">
            <Image
              src="https://images.unsplash.com/photo-1577896851231-70ef18881754?ixlib=rb-4.0.3"
              alt="Enseignants collaborant sur un projet innovant"
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
              widths={[800, 1200]}
              sizes="(max-width: 768px) 800px, 1200px"
              aspectRatio="16:9"
              loading="lazy"
            />            
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Processus - MAINTENANT AVEC FOND TRÈS LÉGÈREMENT BLEU -->
  <section id="processus" class="py-24 md:py-32 bg-white relative scroll-mt-16">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <SectionDivider variant="sky" class="mb-6">
            <Icon name="tabler:list-check" class="w-5 h-5" />
            Processus
          </SectionDivider>
          <h2 class="text-4xl md:text-5xl font-bold text-sky-900 mb-6">
            Comment participer ?
          </h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Un processus simple en trois étapes pour partager votre projet
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8 items-center">
          <!-- Cartes à gauche -->
          <div class="space-y-6 h-full">
            {processSteps.map((step, index) => (
              <div class="bg-[var(--ootb-blue)] rounded-xl p-6 shadow-sm hover:shadow-md transition-shadow">
                <div class="flex items-start gap-5">
                  <div class="bg-white/10 rounded-lg p-3 shrink-0">
                    <Icon name={step.icon} class="w-6 h-6 text-white" />
                  </div>
                  <div class="min-w-0">
                    <h3 class="text-xl md:text-2xl font-semibold mb-2 text-white">
                      {step.title}
                    </h3>
                    <p class="text-white/90 leading-relaxed">{step.description}</p>
                  </div>
                </div>
              </div>
            ))}
          </div>
          
          <!-- Image à droite -->
          <div class="relative order-first md:order-last h-full">
            <div class="h-full">
              <div class="aspect-[9/16] w-full">
                <video
                  class="rounded-2xl shadow-xl w-full h-full object-cover"
                  controls
                  preload="metadata"
                >
                  <source 
                    src="https://res.cloudinary.com/dza0sg4uf/video/upload/f_auto:video,q_auto/v1/OOTB/giysu9tc05p3b6g6rpch"
                    type="video/mp4"
                  />
                  Votre navigateur ne supporte pas la lecture de vidéos.
                </video>
                 {/* Ancienne iframe YouTube
      <iframe 
        src="https://www.youtube.com/embed/nfl1rW7CWog?si=Qz9X1qGvWbqzXqCZ" 
        title="Innovation pédagogique" 
        class="rounded-2xl shadow-xl w-full h-full object-cover"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
        allowfullscreen>
      </iframe>
      */}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Formulaire - RESTE EN DERNIER -->
  <section id="formulaire" class="py-24 md:py-32 bg-gradient-to-b from-[--ootb-blue] from-0% via-[#4a90c9] via-60% to-[--ootb-blue] to-100% scroll-mt-16 mt-8">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center mb-16">
        <SectionDivider variant="white" class="mb-6">
          <Icon name="tabler:send" class="w-5 h-5 text-white" />
          <span class="text-white">Soumission</span>
        </SectionDivider>
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
          Prêt à partager votre projet ?
        </h2>
        <p class="text-xl text-white/90 pb-6">
          Rejoignez la communauté des enseignants innovants
        </p>
      </div>
      
      <div class="relative z-10">
        <ProjectSubmissionForm />
      </div>
    </div>
  </section>

  <!-- Exemples de projets -->
  <section id="exemples" class="py-24 md:py-32 bg-gradient-to-b from-white from-0% via-[#f8fcff] via-50% to-white to-100% relative scroll-mt-16">
    <div class="container mx-auto px-4">
      <!-- Add your content here -->
    </div>
  </section>
</Layout>

<style>
  /* Animations raffinées */
  @keyframes float {
    0%, 100% {
      transform: translateY(0) rotate(0);
      opacity: 0.2;
    }
    50% {
      transform: translateY(-20px) rotate(5deg);
      opacity: 0.3;
    }
  }

  @keyframes float-delayed {
    0%, 100% {
      transform: translateY(0) rotate(0);
      opacity: 0.15;
    }
    50% {
      transform: translateY(-15px) rotate(-5deg);
      opacity: 0.25;
    }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .animate-float-delayed {
    animation: float-delayed 8s ease-in-out infinite;
    animation-delay: -2s;
  }

  .process-step {
    @apply relative overflow-hidden;
  }
  
  .process-step::before {
    content: '';
    @apply absolute inset-0 bg-gradient-to-br from-[#6ab29e]/5 to-transparent opacity-0 transition-opacity duration-300 rounded-2xl;
  }
  
  .process-step:hover::before {
    @apply opacity-100;
  }

  /* Ajout d'effets de hover plus sophistiqués */
  .process-step:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(var(--ootb-blue-rgb), 0.1);
  }

  .criteria-card:hover {
    background: linear-gradient(135deg, white, rgba(var(--ootb-blue-rgb), 0.05));
  }
</style>