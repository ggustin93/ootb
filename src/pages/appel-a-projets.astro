---
import Layout from '~/layouts/PageLayout.astro';
import { Icon } from 'astro-icon/components';
import ProjectSubmissionForm from '~/components/forms/ProjectSubmissionForm.astro';
import Image from '~/components/common/Image.astro';
import logoTalent from '~/assets/images/logo_talent.avif';
import ActionBadge from '~/components/ui/ActionBadge.astro';
import SectionDivider from '~/components/ui/SectionDivider.astro';
import GradientHeroSection from '~/components/sections/GradientHeroSection.astro';
import Link from '~/components/ui/Link.astro';

const metadata = {
  title: 'Appel à projets | Out of the Books',
  description: 'Partagez votre expérience pédagogique innovante et inspirez vos pairs lors du Festival Out of the Books 2024.',
  canonical: 'https://outofthebooks.org/appel-a-projets',
};

const processSteps = [
  {
    icon: 'tabler:bulb',
    title: 'Soumission',
    description: 'Partagez votre projet innovant via notre formulaire en ligne'
  },
  {
    icon: 'tabler:messages',
    title: 'Évaluation',
    description: 'Notre comité évalue les projets selon leur pertinence et impact'
  },
  {
    icon: 'tabler:check',
    title: 'Sélection',
    description: 'Les projets retenus seront publiés et partagés avec la communauté'
  }
];

const criteria = [
  {
    icon: "tabler:bulb-filled",
    title: "Innovation pédagogique",
    description: "Une approche originale qui transforme l'expérience d'apprentissage"
  },
  {
    icon: "tabler:chart-dots",
    title: "Impact mesurable",
    description: "Des résultats concrets sur la progression des élèves"
  },
  {
    icon: "tabler:repeat",
    title: "Facilement reproductible",
    description: "Un projet adaptable par d'autres enseignants"
  },
  {
    icon: "tabler:users",
    title: "Pertinent pour tous",
    description: "Une valeur ajoutée pour la communauté éducative"
  }
];
---

<Layout {metadata}>
  <GradientHeroSection>
    <!-- Éléments décoratifs flottants -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
     
      
      <!-- Motifs géométriques -->
      <div class="absolute top-1/3 right-[10%] w-16 h-16 opacity-20">
        <Icon name="tabler:book-2" class="w-full h-full text-white transform rotate-12 animate-float" />
      </div>
      <div class="absolute bottom-1/3 left-[25%] w-14 h-14 opacity-15">
        <Icon name="tabler:pencil" class="w-full h-full text-white transform -rotate-12 animate-float-delayed" />
      </div>
    </div>

    <!-- Contenu principal -->
    <div class="relative z-10 container mx-auto px-4 pt-32">
      <div class="max-w-6xl mx-auto">
        <div class="grid md:grid-cols-12 gap-8 lg:gap-12 items-center">
          <!-- Image à gauche (1/3) -->
          <div class="relative hidden md:block md:col-span-5">
            <div class="relative w-full">
              <div class="absolute inset-0 bg-white/10 rounded-3xl blur-2xl transform scale-95"></div>
              <div class="relative transform hover:-rotate-2 transition-transform duration-500">
                <Image
                  src={logoTalent}
                  alt="Les enseignants ont du talent"
                  class="w-full h-full object-contain drop-shadow-2xl relative z-10"
                  widths={[400]}
                  sizes="400px"
                  loading="eager"
                />
              </div>
            </div>
          </div>

          <!-- Contenu textuel (2/3) -->
          <div class="text-center md:text-left md:col-span-7">
            <div class="space-y-6">
              <!-- Badge et titre -->
              <div>
                <ActionBadge 
                  variant="appel" 
                  class="inline-block text-lg sm:text-xl tracking-wide transform -skew-x-12 shadow-lg mb-6"
                >
                  Appel à projets
                </ActionBadge>

                <h1 class="text-5xl md:text-6xl font-extrabold text-white">
                  <span class="text-4xl md:text-5xl font-bold text-white/90">
                    <span class="font-handwritten">"Les enseignants ont du talent"</span>
                  </span>
                </h1>
              </div>

              <!-- Description -->
              <p class="text-lg text-white/90 font-light leading-relaxed">
                Vous avez mis en place un projet innovant dans votre classe ? Participez à l'appel à projets "Les enseignants ont du talent" et 
                <span class="text-white font-medium">inspirez vos pairs</span>. Découvrez les 
                <Link 
                  href="/category/fiche" 
                  icon="tabler:external-link"
                >
                  ressources pédagogiques
                </Link>
                déjà partagées par la communauté.
              </p>

              <!-- CTA -->
              <div class="flex flex-wrap gap-6 justify-center md:justify-start pt-6">
                <a 
                  href="#soumettre"
                  class="group relative inline-flex items-center gap-3 px-8 py-4 bg-white text-[#6ab29e] rounded-full hover:bg-[#6ab29e] hover:text-white transition-all duration-300 shadow-lg hover:shadow-xl hover:-translate-y-1 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#6ab29e]"
                >
                  <Icon 
                    name="tabler:send" 
                    class="w-5 h-5 transition-all duration-300 group-hover:translate-x-0.5 group-hover:scale-110" 
                  />
                  <span class="font-semibold">
                    Soumettre un projet
                  </span>
                </a>

                <a 
                  href="#criteres"
                  class="group relative inline-flex items-center gap-3 px-8 py-4 bg-white/10 text-white rounded-full hover:bg-white/20 transition-all duration-300 backdrop-blur-sm border border-white/10 hover:border-white/20 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white/50"
                >
                  <span class="font-medium">
                    En savoir plus
                  </span>
                  <Icon 
                    name="tabler:arrow-right" 
                    class="w-5 h-5 transition-all duration-300 group-hover:translate-x-1" 
                  />
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </GradientHeroSection>

  <!-- Processus avec fond subtil -->
  <section class="py-24 bg-gradient-to-br from-white via-white to-[--ootb-blue]/5">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <SectionDivider variant="sky" class="mb-6">
            <Icon name="tabler:bulb" class="w-5 h-5" />
            Processus
          </SectionDivider>
          <h2 class="text-4xl md:text-5xl font-bold text-sky-900 mb-6">
            Comment participer ?
          </h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Un processus simple en trois étapes pour partager votre projet
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {processSteps.map((step, index) => (
            <div class="relative group bg-white/80 backdrop-blur-sm rounded-2xl p-8 hover:shadow-lg transition-all duration-300 border border-white/60">
              <div class="absolute inset-0 bg-gradient-to-br from-[#6ab29e]/5 to-transparent rounded-2xl transition-opacity duration-300 opacity-0 group-hover:opacity-100"></div>
              
              <div class="relative space-y-4">
                <!-- Numéro de l'étape -->
                <span class="absolute -top-4 -left-4 w-8 h-8 bg-[#6ab29e]/10 rounded-full flex items-center justify-center text-[#6ab29e] font-semibold">
                  {index + 1}
                </span>

                <div class="inline-flex items-center justify-center w-14 h-14 bg-[#6ab29e]/10 text-[--ootb-blue] rounded-xl transform group-hover:scale-110 group-hover:rotate-3 transition-all duration-300">
                  <Icon name={step.icon} class="w-7 h-7" />
                </div>
                
                <h3 class="text-xl font-semibold text-sky-900">
                  {step.title}
                </h3>
                <p class="text-gray-600 text-sm leading-relaxed">
                  {step.description}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Critères -->
  <section id="criteres" class="py-24 md:py-32 bg-gradient-to-br from-[--ootb-blue]/10 via-white to-white">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-12">
          <SectionDivider variant="sky" class="mb-6">
            <Icon name="tabler:target" class="w-5 h-5" />
            Critères
          </SectionDivider>
          <h2 class="text-4xl md:text-5xl font-bold text-sky-900 mb-4">
            Ce que nous recherchons
          </h2>
        </div>

        <div class="grid sm:grid-cols-2 gap-6">
          {criteria.map((item) => (
            <div class="group bg-white/90 backdrop-blur-sm rounded-2xl p-6 border border-white/60 hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
              <div class="flex items-start gap-4">
                <div class="inline-flex items-center justify-center w-12 h-12 bg-[#6ab29e]/10 text-[--ootb-blue] rounded-xl transform group-hover:scale-110 group-hover:rotate-3 transition-all duration-300">
                  <Icon name={item.icon} class="w-6 h-6" />
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-sky-900 mb-1">
                    {item.title}
                  </h3>
                  <p class="text-sm text-gray-600">
                    {item.description}
                  </p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Formulaire -->
  <section id="soumettre" class="py-24 md:py-32 bg-gradient-to-b from-[--ootb-blue] from-0% via-[#4a90c9] via-60% to-[--ootb-blue] to-100%">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center mb-16">
        <SectionDivider variant="sky" class="mb-6 bg-white/10 backdrop-blur-sm">
          <Icon name="tabler:send" class="w-5 h-5 text-white" />
          <span class="text-white">Soumission</span>
        </SectionDivider>
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
          Prêt à partager votre projet ?
        </h2>
        <p class="text-xl text-white/90">
          Rejoignez la communauté des enseignants innovants
        </p>
      </div>
      
      <div class="relative z-10">
        <ProjectSubmissionForm />
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Animations raffinées */
  @keyframes float {
    0%, 100% {
      transform: translateY(0) rotate(0);
      opacity: 0.2;
    }
    50% {
      transform: translateY(-20px) rotate(5deg);
      opacity: 0.3;
    }
  }

  @keyframes float-delayed {
    0%, 100% {
      transform: translateY(0) rotate(0);
      opacity: 0.15;
    }
    50% {
      transform: translateY(-15px) rotate(-5deg);
      opacity: 0.25;
    }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .animate-float-delayed {
    animation: float-delayed 8s ease-in-out infinite;
    animation-delay: -2s;
  }

  .process-step {
    @apply relative overflow-hidden;
  }
  
  .process-step::before {
    content: '';
    @apply absolute inset-0 bg-gradient-to-br from-[#6ab29e]/5 to-transparent opacity-0 transition-opacity duration-300 rounded-2xl;
  }
  
  .process-step:hover::before {
    @apply opacity-100;
  }

  /* Ajout d'effets de hover plus sophistiqués */
  .process-step:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(var(--ootb-blue-rgb), 0.1);
  }

  .criteria-card:hover {
    background: linear-gradient(135deg, white, rgba(var(--ootb-blue-rgb), 0.05));
  }
</style> 