---
import Layout from '~/layouts/PageLayout.astro';
import { Icon } from 'astro-icon/components';
import { getHomePermalink } from '~/utils/permalinks';
import Button from '~/components/ui/Button.astro';
import '~/assets/styles/handwritten.css';

const title = `Merci pour votre message`;
const description = `Votre message a bien été envoyé. Nous vous répondrons dans les plus brefs délais.`;
---

<Layout metadata={{ title, description }}>
  <section class="flex items-center min-h-[70vh] p-8 md:p-16">
    <div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
      <div class="max-w-2xl text-center">
        <div class="mb-12 flex justify-center">
          <div class="bg-[--ootb-blue] text-white p-6 rounded-full shadow-lg">
            <Icon name="tabler:mail-check" class="w-16 h-16" />
          </div>
        </div>
        
        <h1 class="text-4xl md:text-5xl font-handwritten mb-8 text-[--ootb-blue] leading-tight">
          Message bien reçu !
        </h1>
        
        <p class="text-xl md:text-2xl mb-12 text-gray-700 leading-relaxed max-w-xl mx-auto">
          Merci de nous avoir contactés. Votre message a bien été envoyé et nous vous répondrons dans les plus brefs délais.
        </p>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 max-w-2xl mx-auto">
          <Button 
            variant="blue" 
            size="lg" 
            href={getHomePermalink()} 
            icon="tabler:home" 
            iconPosition="left"
            class="min-h-[60px]"
          >
            Retour à l'accueil
          </Button>
          
          <Button 
            variant="outline-blue" 
            size="lg" 
            href="/a-propos" 
            icon="tabler:info-circle" 
            iconPosition="left"
            class="min-h-[60px]"
          >
            En savoir plus sur nous
          </Button>
        </div>
      </div>
    </div>
  </section>
</Layout> 